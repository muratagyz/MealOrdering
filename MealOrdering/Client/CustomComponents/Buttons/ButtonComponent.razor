@inherits BaseButtonComponent

<button type="submit"
        class="btn @(IsSmall ? " btn-small":"") btn@(IsOutline ? "-outline":"")-@Color"
        disabled="@IsBusy"
        onclick="@OnClick"
        title="@ToolTipStr">
    <span class="fa fa-@Icon"></span>

    @if (IsBusy)
    {
        <span class="spinner-border spinner-border-sm mr-1">@IsBusyCaption</span>
    }
    else
    {
        @Caption
    }

</button>